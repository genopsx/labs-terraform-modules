extends: default

rules:
  indentation:
    level: error
    indent-sequences: false
  document-start:
    present: false
  quoted-strings:
    required: only-when-needed
  line-length:
    max: 100
  truthy:
    allowed-values:
      - "false"
      - "true"
      - "on"

severity:
  indentation: warning
  document-start: warning
  quoted-strings: warning
  line-length: warning
  truthy: warning

